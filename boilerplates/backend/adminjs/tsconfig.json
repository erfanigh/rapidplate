{
  "compilerOptions": {
    "jsx": "react",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "ES2021",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "../",
    "incremental": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": false,
  },
  "exclude": [
    "../node_modules",
    "dist"
  ],
  "include": [
    "src/**.ts",
    "src/**/**.ts",
    "env.d.ts"
  ]
}
